   Delete()
   {
      plStatues = $;

      if ptTombResetTimer <> $
      {
         DeleteTimer(ptTombResetTimer);
         ptTombResetTimer = $;
      }

      propagate;
   }

   CreateStatues()
   {
      local i, lStatues, oStatue;

      plStatues = $;

      // List set up so the final list starts with statues closest to leader.
      lStatues = [ [22, 5, 48, 32, ANGLE_NORTH],  [5, 5, 48, 32, ANGLE_SOUTH],
                   [22, 9, 48, 8, ANGLE_NORTH],   [5, 9, 48, 16, ANGLE_SOUTH],
